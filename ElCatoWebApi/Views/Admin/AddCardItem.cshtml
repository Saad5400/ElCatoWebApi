@model ElCatoWebApi.Models.OldModels.CardListItem

@{
    ViewData["Title"] = "AddCardItem";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h1>AddCardItem</h1>

<h4>CardListItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCardItem">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DisplayName" class="control-label"></label>
                <input asp-for="DisplayName" class="form-control" />
                <span asp-validation-for="DisplayName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CssClasses" class="control-label"></label>
                <input asp-for="CssClasses" class="form-control" />
                <span asp-validation-for="CssClasses" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Icon" class="control-label"></label>
                <input asp-for="Icon" class="form-control" />
                <span asp-validation-for="Icon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Href" class="control-label"></label>
                <input asp-for="Href" class="form-control" />
                <span asp-validation-for="Href" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DisplayOrder" class="control-label"></label>
                <input asp-for="DisplayOrder" class="form-control" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardId" class="control-label"></label>
                <select asp-for="CardId" class="form-control">
                    @foreach (Card card in ViewBag.Cards)
                    {
                        <option value="@card.Id">
                            @card.DisplayName
                        </option>
                    }
                    }
                </select>
                <span asp-validation-for="CardId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PageId" class="control-label"></label>
                <select asp-for="PageId" class="form-control">
                    <option value="@null">
                        Null
                    </option>
                    @foreach (Page pagee in ViewBag.Pages)
                    {
                        <option value="@pagee.Id">
                            @pagee.Folder @pagee.Name
                        </option>
                    }
                </select>
                <span asp-validation-for="PageId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-password="@AdminController.PASSWORD">Back to List</a>
</div>