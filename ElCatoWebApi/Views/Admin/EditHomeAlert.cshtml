@model ElCatoWebApi.Models.OldModels.HomeAlert

@{
    ViewData["Title"] = "EditHomeAlert";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h1>EditHomeAlert</h1>

<h4>HomeAlert</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditHomeAlert">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="AlertType" class="control-label"></label>
                <input asp-for="AlertType" class="form-control" />
                <span asp-validation-for="AlertType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
